<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Employee Attendance</title>
    <link rel="stylesheet" href="/style.css" />
    <!-- Adjust the CSS path as needed -->
  </head>
  <body>
    <h1>Employee Attendance</h1>

    <!-- Search Bar Form -->
    <form action="/viewEmployees" method="GET">
      <input type="text" name="search" placeholder="Search by Employee Name" value="<%= searchQuery || '' %>" />
      <button type="submit">Search</button>
    </form>

    <table>
      <thead>
        <tr>
          <th>Employee Name</th>
          <th>Employee Phone</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% EmployeeData.forEach(record => { %>
        <%{ %>
        <tr>
          <td><%= record.EmpFirstName %> <%= record.EmpLastName %></td>
          <td><%= record.EmpAreaCode%> -  <%= record.EmpPhoneNumber %></td>
          <td>
            <a href="/editEmployee/<%= record.EmployeeID %>">
              <button>Edit</button>
            </a>
          </td>
          <td>
            <form action="/deleteEmployee/<%= record.EmployeeID %>" method="POST" style="display: inline;">
              <button type="submit" onclick="return confirm('Are you sure you want to delete this employee?');">
                Delete
              </button>
            </form>
          </td>
          
        </tr>
        <% } %>
        <% }) %>
      </tbody>
    </table>
    <a href="/internal">Back to Home</a>
  </body>
</html>
