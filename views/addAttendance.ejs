<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Employee Attendance</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <header>
      <div class="topnav">
        <ul>
          <li><h1>Attendance Records</h1></li>
          <li><a href="/">Logout</a></li>
          <li><a href="/viewAttendance">View Attendance</a></li>
          <li><a href="/viewEmployees">View Employees</a></li>
          <li><a href="/addEmployees">Add Employees</a></li>
          <li><a href="/internal">Manager Home</a></li>
        </ul>
      </div>
    </header>

    <!-- Attendance Form -->
    <div class="attendance-form">
      <h3>Add Attendance Record</h3>

      <form action="/addAttendance" method="post">
        <br>
        <label for="EmployeeID">Employee Name</label>
        <select id="EmployeeID" name="EmployeeID" required>
          <option value="">Select Employee</option>
          <% employees.forEach(employee => { %>
            <option value="<%= employee.EmployeeID %>">
              <%= employee.EmpFirstName %> <%= employee.EmpLastName %>
            </option>
          <% }); %>
        </select>

        <br>
        <label for="AttendanceID">Attendance Type</label>
        <select id="AttendanceID" name="AttendanceID" required>
          <option value="">Select Attendance Type</option>
          <% attendanceOptions.forEach(option => { %>
            <option value="<%= option.AttendanceID %>">
              <%= option.AttenDescription %>
            </option>
          <% }); %>
        </select>

        <br>
        <label for="AttenDate">Date</label>
        <input type="date" id="AttenDate" name="AttenDate" required />

        <br>
        <label for="AttenPointValue">Attendance Points</label>
        <input type="number" id="AttenPointValue" name="AttenPointValue" required />

        <br>
        <button type="submit">Submit Attendance Record</button>
      </form>
    </div>
  </body>
</html>