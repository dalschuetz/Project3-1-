<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Employee Attendance</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <header>
      <div class="topnav">
        <ul>
          <li><h1>Add Attendance Records</h1></li>
          <li><a href="/addAttendance">Add Attendance</a></li>
          <li><a href="/login">Manager Login</a></li>
        </ul>
      </div>
    </header>

    <!-- Attendance Form -->
    <div style="
      display: flex; 
      justify-content: center; 
      align-items: center; 
      min-height: calc(100vh - 100px);
      padding: 20px;
    ">
      <div style="
        background-color: #748d92; 
        color: white;
        padding: 40px;
        border-radius: 8px;
        width: 100%;
        max-width: 500px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      ">
        <h3 style="
          text-align: center;
          color: white;
          font-family: 'Oswald', sans-serif;
          margin-bottom: 20px;
          font-size: 1.8em;
        ">Add Attendance Record</h3>

        <form action="/addAttendance" method="post" style="
          display: flex;
          flex-direction: column;
          gap: 15px;
        ">
          <div style="display: flex; flex-direction: column;">
            <label for="EmployeeID" style="
              margin-bottom: 5px;
              font-family: 'Montserrat', sans-serif;
            ">Employee Name</label>
            <select id="EmployeeID" name="EmployeeID" required style="
              width: 100%;
              padding: 10px;
              border: 2px solid #124e66;
              border-radius: 4px;
              background-color: white;
              color: #212a31;
              font-family: 'Montserrat', sans-serif;
            ">
              <option value="">Select Employee</option>
              <% employees.forEach(employee => { %>
                <option value="<%= employee.EmployeeID %>">
                  <%= employee.EmpFirstName %> <%= employee.EmpLastName %>
                </option>
              <% }); %>
            </select>
          </div>

          <div style="display: flex; flex-direction: column;">
            <label for="AttendanceID" style="
              margin-bottom: 5px;
              font-family: 'Montserrat', sans-serif;
            ">Attendance Type</label>
            <select id="AttendanceID" name="AttendanceID" required style="
              width: 100%;
              padding: 10px;
              border: 2px solid #124e66;
              border-radius: 4px;
              background-color: white;
              color: #212a31;
              font-family: 'Montserrat', sans-serif;
            ">
              <option value="">Select Attendance Type</option>
              <% attendanceOptions.forEach(option => { %>
                <option value="<%= option.AttendanceID %>">
                  <%= option.AttenDescription %>
                </option>
              <% }); %>
            </select>
          </div>

          <div style="display: flex; flex-direction: column;">
            <label for="AttenDate" style="
              margin-bottom: 5px;
              font-family: 'Montserrat', sans-serif;
            ">Date</label>
            <input type="date" id="AttenDate" name="AttenDate" required style="
              width: 100%;
              padding: 10px;
              border: 2px solid #124e66;
              border-radius: 4px;
              background-color: white;
              color: #212a31;
              font-family: 'Montserrat', sans-serif;
            "/>
          </div>

          <div style="display: flex; flex-direction: column;">
            <label for="AttenPointValue" style="
              margin-bottom: 5px;
              font-family: 'Montserrat', sans-serif;
            ">Attendance Points</label>
            <input type="number" id="AttenPointValue" name="AttenPointValue" placeholder="Point Value" required style="
              width: 100%;
              padding: 10px;
              border: 2px solid #124e66;
              border-radius: 4px;
              background-color: white;
              color: #212a31;
              font-family: 'Montserrat', sans-serif;
            "/>
          </div>

          <div style="
          display: flex;
          justify-content: space-between;
          gap: 10px;
          margin-top: 10px;
        ">
            <button type="submit" style="
              flex-grow: 1;
              padding: 12px;
              background-color: #124e66;
              color: white;
              border: none;
              border-radius: 4px;
              cursor: pointer;
              font-family: 'Oswald', sans-serif;
              font-size: 1em;
              transition: background-color 0.3s ease;
            " onmouseover="this.style.backgroundColor='#748d92'" onmouseout="this.style.backgroundColor='#124e66'">
                Add Attendance
            </button>
            <button type="button" onclick="location.href='/'" style="
              flex-grow: 1;
              padding: 12px;
              background-color: #748d92;
              color: white;
              border: none;
              border-radius: 4px;
              cursor: pointer;
              font-family: 'Oswald', sans-serif;
              font-size: 1em;
              transition: background-color 0.3s ease;
            " onmouseover="this.style.backgroundColor='#124e66'" onmouseout="this.style.backgroundColor='#748d92'">
                Cancel
            </button>
        </div>
        </form>
      </div>
    </div>
  </body>
</html>