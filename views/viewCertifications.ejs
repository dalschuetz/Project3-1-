<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Certifications</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <h1>Employee Certifications</h1>

    <!-- Search Bar -->
    <form action="/viewCertifications" method="GET">
      <input type="text" name="search" placeholder="Search by Employee Name" value="<%= searchQuery %>" />
      <button type="submit">Search</button>
    </form>

    <!-- Sort options -->
    <h3>Sort by Employee Name</h3>
    <a href="/viewCertifications?sort=asc">Ascending</a> |
    <a href="/viewCertifications?sort=desc">Descending</a>

    <!-- Table displaying certifications -->
    <h2>Employee Certification Details</h2>
    <table border="1">
      <thead>
        <tr>
          <th>Employee Name</th>
          <th>Certificate Name</th>
          <th>Grade</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% certificationsData.forEach(certification => { %>
        <tr>
          <td>
            <%= certification.EmpFirstName %> <%= certification.EmpLastName %>
          </td>
          <td><%= certification.CertDescription %></td>
          <td><%= certification.CertGrade %></td>
          <td>
            <form action="/editCertifications" method="GET" style="display: inline">
              <input type="hidden" name="EmployeeID" value="<%= certification.EmployeeID %>" />
              <input type="hidden" name="CertificationID" value="<%= certification.CertificationID %>" />
              <button type="submit">Edit</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>

    <a href="/internal">Back to Home</a>
  </body>
</html>
